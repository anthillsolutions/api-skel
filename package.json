{
  "name": "api-skelpi",
  "version": "0.0.1",
  "description": "skeleton API in Typescript",
  "main": "/dist/server.js",
  "scripts": {
    "test": "jest --forceExit",
    "start": "gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthillsolutions/api-skel.git"
  },
  "author": "Pierre Repetto-Andipatin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anthillsolutions/api-skel/issues"
  },
  "homepage": "https://github.com/anthillsolutions/api-skel#readme",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "mapCoverage": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**",
      "!**/gulpfile.js",
      "!**/server/types/**"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.1",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/filesystem": "0.0.28",
    "@types/jest": "^20.0.4",
    "@types/jszip": "0.0.33",
    "@types/node": "^8.0.13",
    "@types/supertest": "^2.0.2",
    "body-parser": "^1.17.2",
    "chai": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-typescript": "^3.2.0",
    "jest": "^20.0.4",
    "mocha": "^3.4.2",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "docxtemplater": "^3.1.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "jszip": "^2.6.1",
    "pm2": "^2.5.0"
  }
}
